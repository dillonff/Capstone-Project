<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="au.edu.sydney.comp5703.cs30.chat.mapper.MessageMapper">
    <resultMap id="MessageMap" type="au.edu.sydney.comp5703.cs30.chat.entity.Message">
        <id column="message_id" property="id"/>
        <result column="sender_id" property="senderId"/>
        <result column="gmt_create" property="time"/>
        <result column="content" property="content"/>
        <result column="channel_id" property="channelId"/>
    </resultMap>

    <insert id="insertMessage">
        insert into message(
            message_id,sender_id,channel_id,gmt_create,content
        ) values (
                     #{id},#{senderId},#{channelId},#{time},#{content}
                 )
    </insert>

    <select id="findByChannel" resultMap="MessageMap">
        select * from message where channel_id=#{channelId}
    </select>
</mapper>